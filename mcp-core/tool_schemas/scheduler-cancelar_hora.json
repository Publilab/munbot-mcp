{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "name": "scheduler-cancelar_hora",
    "version": "1.0.0",
    "description": "Cancela una reserva y libera el slot correspondiente.",
    "input_schema": {
      "type": "object",
      "properties": {
        "id_reserva": {
          "type": "string",
          "format": "uuid",
          "description": "Identificador de la reserva a cancelar."
        },
        "motivo_cancelacion": {
          "type": "string",
          "description": "Motivo opcional de la cancelaci√≥n."
        }
      },
      "required": ["id_reserva"],
      "additionalProperties": false
    },
    "result_schema": {
      "type": "object",
      "properties": {
        "id_reserva": {
          "type": "string",
          "format": "uuid"
        },
        "estado": {
          "type": "string",
          "enum": ["cancelada"]
        }
      },
      "required": ["id_reserva", "estado"],
      "additionalProperties": false
    }
  }
  